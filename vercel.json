{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/webhook.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/test-bot.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/test-bot",
      "dest": "api/test-bot.py"
    },
    {
      "src": "/api/webhook",
      "dest": "api/webhook.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
} 